@model IEnumerable<FixItApp.Infrastructure.DataTransferObjects.UserDTO>


<!DOCTYPE html>

<html>
<body>

 <!-- Page Header Start -->
            <div class="page-header">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <h2>Our users</h2>
                        </div>
                    </div>
                </div>
            </div>
<!-- Page Header End -->

<!-- Team Start -->
            <div class="team">
                <div class="container">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                                <div class="team-item">
                                    <div class="team-text">
                                        <h2>@item.Name @item.Surname</h2>
                                        <p>@item.Role</p>
                                    </div>
                                    <form asp-controller="User" asp-action="DeleteUser" class="social-tw" method="post">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit">Delete</button>
                                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- Team End -->


