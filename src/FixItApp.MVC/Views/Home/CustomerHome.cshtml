@model FixItApp.Infrastructure.DataTransferObjects.UserDTO
<body>
<div>
    <!-- Page Header Start -->
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2>Welcome back, @Model.Login </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page Header End -->
    
    <div style="margin-top: 10px">
        <div class="feature wow fadeInUp" data-wow-delay="0.1s">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <a asp-controller="Application" asp-action="CreateApplication" method="get" class="col-lg-4 col-md-12">
                        <div class="feature-item">
                            <div class="feature-icon">
                            </div>
                            <div class="feature-text">
                                <h3>Create application</h3>
                                <p>Specify the title, description and add items to fix.</p>
                            </div>
                        </div>
                    </a>
                    <a asp-controller="Application" asp-action="GetClientApplications" asp-route-id="@Model.Id" method="get" class="col-lg-4 col-md-12">
                        <div class="feature-item">
                            <div class="feature-icon">
                            </div>
                            <div class="feature-text">
                                <h3>View my applications</h3>
                                <p>Get status and ensure the working process.</p>
                            </div>
                        </div>
                    </a>
                    
                </div>
            </div>
        </div>
    </div>
    <!-- Feature End-->


</div>
</body>